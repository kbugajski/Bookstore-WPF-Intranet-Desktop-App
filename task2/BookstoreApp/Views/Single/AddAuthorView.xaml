<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views.Single"
             xmlns:Single="clr-namespace:BookstoreApp.ViewModels.Single" 
             x:Class="BookstoreApp.Views.Single.AddAuthorView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Single:AddAuthorViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="{x:Type Label}" x:Key="centerText">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="grid" Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Top Label -->
        <Label Grid.Row="0" Content="{Binding TopLabel}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>

        <!-- Error Label -->
        <Label Grid.Row="1" Content="{Binding ErrorLabel}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Red" FontSize="20"/>

        <!-- Input Fields -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- First Name -->
            <Label Grid.Row="0" HorizontalAlignment="Right" Grid.Column="0" FontSize="15" Content="First Name:" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}" MaxLength="64" Height="17" VerticalAlignment="Top" Margin="5,5,0,0" Width="200" HorizontalAlignment="Left"/>

            <!-- Last Name -->
            <Label Grid.Row="1" HorizontalAlignment="Right" Grid.Column="0" FontSize="15" Content="Last Name:" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LastName}" MaxLength="64" Height="17" VerticalAlignment="Top" Margin="5,5,0,0" Width="200" HorizontalAlignment="Left"/>

            <!-- Is Alive (Radio Buttons) -->
            <Label Grid.Row="2" HorizontalAlignment="Right" Grid.Column="0" FontSize="15" Content="Is Alive:" />
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5,9">
                <RadioButton Content="Yes" IsChecked="{Binding IsAlive}" Margin="0,0,10,0"/>
                <RadioButton Content="No" IsChecked="{Binding IsAlive, Converter={StaticResource InverseBooleanConverter}}"/>
            </StackPanel>

            <!-- Country of Origin -->
            <Label Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" FontSize="15" Content="Country of Origin:" />
            <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Width="200" Height="20" HorizontalAlignment="Left"/>
        </Grid>

        <!-- Add Author Button -->
        <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Padding="5,5,5,5" Content="Add Author" Command="{Binding AddAuthorCommand}"/>
    </Grid>
</UserControl>
