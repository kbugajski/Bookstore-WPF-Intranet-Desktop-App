<UserControl x:Class="BookstoreApp.Views.Single.AddPublisherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views.Single"
             xmlns:vm="clr-namespace:BookstoreApp.ViewModels.Single"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AddPublisherViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add New Publisher" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                <!-- Customer Details Section -->
                <GroupBox Header="Publisher Details" Margin="0,10,0,0">
                    <StackPanel Margin="10,10,10,10">
                        <!-- Row 1 -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Name:" Margin="25,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Name}" Width="230" Margin="0,0,20,0"/>
                            <TextBlock Text="NIP Code:" Margin="100,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Nip}" Width="230"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

             
                <GroupBox Header="Address Details" Margin="0,10,0,0">
                    <StackPanel Margin="10,10,10,10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Street:" Margin="26,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230" Margin="0,0,88,0"/>
                            <TextBlock Text="House Number:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Flat Number:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="221" Margin="0,0,20,0"/>
                            <TextBlock Text="Postal Code:" Margin="86,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="City:" Margin="37,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230" Margin="0,0,20,0"/>
                            <TextBlock Text="Region:" Margin="113,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Phone Number:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="206"/>
                            <TextBlock Text="Country:" Margin="128,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="230" ItemsSource="{Binding CountriesComboBoxDto}" DisplayMemberPath="Title" SelectedValuePath="Title" SelectedValue="{Binding Country}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>


                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
                    <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CloseCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
