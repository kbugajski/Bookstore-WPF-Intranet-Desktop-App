<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Single="clr-namespace:BookstoreApp.ViewModels.Single" x:Class="BookstoreApp.Views.Single.AddReviewView" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">



    <UserControl.DataContext>
        <Single:AddReviewViewModel/>
    </UserControl.DataContext>



    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add New Review" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                <GroupBox Header="Reiview Details" Margin="0,10,0,0">
                    <StackPanel Margin="10,10,10,10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Rating(1-5)" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="230" Margin="0,0,20,0"/>
                            <TextBlock Text="Review date:" Margin="84,0,10,0" VerticalAlignment="Center"/>
                            <DatePicker Width="234"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Review Text" Margin="0,10,0,0">
                    <StackPanel Margin="10,2,10,10">
                        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5">
                            <TextBlock Text="Enter review text:" Margin="10,0,10,10" VerticalAlignment="Center" FontSize="15"/>

                        </StackPanel>
                        <StackPanel>
                            <TextBox Width="709" Height="100" Margin="0,0,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Book and Author" Margin="0,10,0,0">
                    <StackPanel Margin="10,10,10,10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Review Book:" Margin="7,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="230" Margin="0,0,20,0"/>
                            <TextBlock Text="Review Author:" Margin="119,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="230"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Width="100" Margin="5"/>
                    <Button Content="Cancel" Width="100" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
