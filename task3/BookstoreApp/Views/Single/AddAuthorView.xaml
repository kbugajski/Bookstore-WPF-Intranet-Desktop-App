<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views.Single"
             xmlns:Single="clr-namespace:BookstoreApp.ViewModels.Single" 
             x:Class="BookstoreApp.Views.Single.AddAuthorView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Single:AddAuthorViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="{x:Type Label}" x:Key="centerText">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add New Author" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                <GroupBox Header="Author Details" Margin="0,10,0,0">
                    <StackPanel Margin="10,10,10,10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="First Name:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding FirstName}" Width="230" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                            <TextBlock Text="Last Name:" Margin="99,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding LastName}" Width="230" VerticalAlignment="Center" Margin="5,0,0,0"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Select Country:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Width="220" />
                            <TextBlock Text="Is alive:" Margin="120,0,0,0" VerticalAlignment="Center"/>
                            <RadioButton Content="Yes" IsChecked="{Binding IsAlive}" VerticalAlignment="Center" Margin="13,0,23,0"/>
                            <RadioButton Content="No" IsChecked="{Binding IsAlive, Converter={StaticResource InverseBooleanConverter}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Width="100" Margin="5" Command="{Binding AddAuthorCommand}"/>
                    <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CloseCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
    
</UserControl>
